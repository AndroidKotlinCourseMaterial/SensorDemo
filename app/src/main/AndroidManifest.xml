<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rosehulman.sensordemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChooserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".swipeturn.SwipeTurnActivity"
            android:label="@string/title_activity_swipe_turn"
            android:parentActivityName=".ChooserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.rosehulman.sensordemo.ChooserActivity" />
        </activity>
        <activity
            android:name=".scrolltilt.ScrollTiltActivity"
            android:label="@string/title_activity_scroll_tilt"
            android:parentActivityName=".ChooserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.rosehulman.sensordemo.ChooserActivity" />
        </activity>
        <activity android:name=".pickshake.PickShakeActivity"
            android:label="@string/title_activity_pick_shake"
            android:parentActivityName=".ChooserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.rosehulman.sensordemo.ChooserActivity" />
        </activity>
    </application>

</manifest>